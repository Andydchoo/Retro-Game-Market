<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4" id='mainbody'>

  <div class="col-md-6">

    <h3>Create a New Project:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="title">Game Title:</label>
        <input class="form-input" type="text" id="title" name="game-title" />
      </div>

      <div class="form-group">
        <label for="project-funding">Category:</label>
        <input class="form-input" type="text" id="category" name="game-category" />
      </div>

      <div class="form-group">
        <label for="project-funding">Condition:</label>
        <input class="form-input" type="text" id="condition" name="game-condition" />
      </div>

      <div class="form-group">
        <label for="project-funding">Price ($):</label>
        <input class="form-input" type="number" id="price" name="game-price" />
      </div>

      <div class="form-group">
        <label for="project-desc">description:</label>
        <textarea class="form-input" id="desc" name="game-desc"></textarea>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>

  </div>

  <h3>Current Projects:</h3>

  {{#if posts.length}}
  <div class="col-md-6 project-list">
    

    {{#each posts}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{posts.id}}">{{posts.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

</div>

<script src="./js/profile.js"></script>
