<div class="col-md-6">

    <h3>Create a New Project:</h3>

    <form class="form posting-form">

      <div class="form-group">
        <label for="title">Game Title:</label>
        <input class="form-input" type="text" id="title" name="game-title" />
      </div>

      {{!-- This selects the category or the publisher of the game --}}
      <div class="form-group">
        <label for="project-funding">Category:</label>
        <select name="condition" id="category">
          <option>Select Category</option>
          <option value="Nintendo">Nintendo</option>
          <option value="Sony">Sony</option>
          <option value="Microsoft">Microsoft</option>
          <option value="Sega">Sega</option>
          <option value="Square Enix">Square Enix</option>
          <option value="Bandai Namco">Bandai Namco</option>
        </select>
      </div>

      {{!-- This selects the genre of the game --}}
      <div class="form-group">
        <label for="project-funding">Genre:</label>
        <select name="condition" id="genre">
          <option>Select Genre</option>
          <option value="Action">Action</option>
          <option value="Adventure">Adventure</option>
          <option value="RPG">RPG</option>
          <option value="Simulation">Simulation</option>
          <option value="Sports">Sports</option>
          <option value="Platformer">Platformer</option>
          <option value="Racing">Racing</option>
          <option value="Shooter">Shooter</option>
          <option value="Open World">Open World</option>
          <option value="Strategy">Strategy</option>
        </select>
      </div>

      {{!-- This is for the system --}}
      <div class="form-group">
        <label for="project-funding">System:</label>
        <select name="condition" id="system">
          <option>Select System</option>
          <option value="NES">NES</option>
          <option value="SNES">SNES</option>
          <option value="N64">N64</option>
          <option value="Gamecube">Gamecube</option>
          <option value="Wii">Wii</option>
          <option value="Gameboy">Gameboy/Color</option>
          <option value="Gameboy Advance">Gameboy Advance</option>
          <option value="DS">DS</option>
          <option value="3DS">3DS</option>
          <option value="PS1">PS1</option>
          <option value="PS2">PS2</option>
          <option value="PSP">PSP</option>
          <option value="PS3">PS3</option>
          <option value="PS4">PS4</option>
          <option value="Xbox">Xbox</option>
          <option value="Xbox 360">Xbox 360</option>
          <option value="Sega Genesis">Sega Genesis</option>
        </select>
      </div>
    
      {{!-- This selects the condition of the game --}}
      <div class="form-group">
        <label for="project-funding">Condition:</label>
        <select name="condition" id="condition">
          <option>Choose Condition</option>
          <option value="Loose">Loose</option>
          <option value="(CIB) Complete In Box">(CIB) Complete In Box</option>
          <option value="Brand New">Brand New</option>
        </select>
      </div>

      {{!-- This is the Price section --}}
      <div class="form-group">
        <label for="project-funding">Price ($):</label>
        <input class="form-input" type="number" id="price" name="game-price" />
      </div>

      {{!-- This is the description section --}}
      <div class="form-group">
        <label for="project-desc">Description:</label>
        <textarea class="form-input" id="desc" name="game-desc"></textarea>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
      
    </form>

</div>

<script src="./js/posting.js"></script>