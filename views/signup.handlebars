<div class="columns is-centered row block" id="login">
    <div class="column is-half block">

        <form class="form signup-form">
            <p class="title is-2 has-text-centered">Sign up for RGMarket</p>
            
            <div class="form-group block">
                <p for="name-signup" class="subtitle is-4">Username:</p>
                <input class="input is-rounded form-input" style="width: 100%;" type="text" id="name-signup" placeholder="Username">
            </div>

             <div class="form-group block">
                <p for="email-signup" class="subtitle is-4">Email:</p>
                <input class="input is-rounded form-input" style="width: 100%;" type="text" id="email-signup" placeholder="user@email.com">
            </div>

            <div class="form-group block">
                <p for="password-signup" class="subtitle is-4">Password:</p>
                <input class="input is-rounded form-input" style="width: 100%;" type="text" id="password-signup" placeholder="Password">
            </div>

            <div class="form-group block">
                <p class="subtitle is-4">Already have an account?</p>
                <button class="button is-info" type="submit">
                <strong>Sign Up</strong>
                </button>
            </div>

        
        
        </form>
        
    </div>
  </div>

  <script src="./js/signup.js"></script>